<div class="col-12 col-sm-12">
    <div class="card">
        <div class="card-header pb-0">
            <h5 class="card-title mb-0 pb-0">@ViewData["Content-Title"] List</h5>
        </div>
        <div class="card-body">
            <form class="form-horizontal" id="frm_search" name="frm_search" autocomplete="off">

                <div class="row row-sm">
                    <div class="col-lg-3">
                        <label for="cn_date">วันที่</label>
                        <div class="input-group date">
                            <input class="form-control date-picker" id="ss_date" name="ss_date" type="text" value="">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="la la-calendar-check-o"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <label for="ss_sku_search">Item Supersession</label> 
                        <input type="text" class="form-control" id="ss_sku_search" name="ss_sku_search" value="">
                    </div>
                    <div class="col-lg-6">
                        <label for="sku_list">รายการสินค้า:</label>
                        <select class="form-control select2-no-search sku" id="sku_list" name="sku_list" >
                            <option value="">-- เลือกสินค้า --</option>
                        </select>
                    </div>
                </div>

                <div class="form-group mb-0 mt-3 justify-content-end" align="right">
                    <div align="right">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                        <button type="button" id="btn-export" class="btn btn-success">&nbsp;&nbsp;Export&nbsp;&nbsp;</button>&nbsp;
                    </div>
                </div>
            </form>
            <div class="border-top my-3"></div>
            <div class="table-responsive mg-t-20">
                <table id="tbl-list" class="table table-bordered table-striped table-hover mg-b-0 text-md-nowrap"></table>
            </div>
        </div>
    </div>
</div>